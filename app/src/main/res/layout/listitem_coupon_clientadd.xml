<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@color/transparent" />

    <LinearLayout
        android:id="@+id/lv_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/bg_clientadd_coupon"
        android:scaleType="centerCrop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费乘车"
                android:textColor="@color/yellow"
                android:textSize="@dimen/textsize_9" />

            <LinearLayout
                android:id="@+id/lv_price"
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="￥"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/yellow"
                    android:textSize="35sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_regdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至2016.12.25"
                android:textColor="@color/yellow"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/lv_active"
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未激活"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>  "
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/bg_coupon_share"
                    android:text=" 分享激活 "
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_6.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
